<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bg1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_16sdp"
    tools:context=".detailedresults">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightgreen"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/typeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="type"
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"/>
            <TextView
                android:id="@+id/typetv2"
                android:paddingStart="@dimen/_6ssp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="type"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Test Score"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_8sdp"
        />


        <LinearLayout
            android:paddingVertical="@dimen/_8sdp"
            android:background="@drawable/whiteborder"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_width="@dimen/_50sdp"
                        android:backgroundTint="#7BA9A5"
                        android:layout_height="@dimen/_50sdp"
                        app:cardCornerRadius="@dimen/_8sdp">

                        <ImageView
                            android:id="@+id/blockimage1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/sensing"/>

                    </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/block1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"/>
                <TextView
                    android:id="@+id/block1tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_6sdp"
                    android:layout_width="@dimen/_50sdp"
                    android:backgroundTint="#7BA9A5"
                    android:layout_height="@dimen/_50sdp"
                    app:cardCornerRadius="@dimen/_8sdp">

                    <ImageView
                        android:id="@+id/blockimage2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sensing"/>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/block2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"/>
                <TextView
                    android:id="@+id/block2tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_6sdp"
                    android:layout_width="@dimen/_50sdp"
                    android:backgroundTint="#7BA9A5"
                    android:layout_height="@dimen/_50sdp"
                    app:cardCornerRadius="@dimen/_8sdp">

                    <ImageView
                        android:id="@+id/blockimage3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sensing"/>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/block3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"/>
                <TextView
                    android:id="@+id/block3tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_6sdp"
                    android:layout_width="@dimen/_50sdp"
                    android:backgroundTint="#7BA9A5"
                    android:layout_height="@dimen/_50sdp"
                    app:cardCornerRadius="@dimen/_8sdp">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/blockimage4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/sensing"/>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/block4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"/>
                <TextView
                    android:id="@+id/block4tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"/>

            </LinearLayout>









        </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description goes here"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:layout_margin="@dimen/_6sdp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/darkgreen"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp">
        <LinearLayout
            android:paddingTop="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/traittv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" have the following personality traits:"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>

            <TextView
                android:id="@+id/trait1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="istj's have the following personality traits:"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
            <TextView
                android:id="@+id/trait2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="istj's have the following personality traits:"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
            <TextView
                android:id="@+id/trait3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="istj's have the following personality traits:"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
            <TextView
                android:id="@+id/trait4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="istj's have the following personality traits:"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/famoustype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Famous type"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="@dimen/_6sdp"/>

    <LinearLayout
        android:paddingVertical="@dimen/_8sdp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_width="@dimen/_50sdp"
                android:backgroundTint="#7BA9A5"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="@dimen/_50sdp">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mbtitestbanner"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/famousPerson1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_width="@dimen/_50sdp"
                android:backgroundTint="#7BA9A5"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="@dimen/_50sdp">
                <ImageView
                    android:id="@+id/img2"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mbtitestbanner"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/famousPerson2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"/>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_width="@dimen/_50sdp"
                android:backgroundTint="#7BA9A5"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="@dimen/_50sdp">
                <ImageView
                    android:id="@+id/img3"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mbtitestbanner"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/famousPerson3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"/>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_width="@dimen/_50sdp"
                android:backgroundTint="#7BA9A5"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="@dimen/_50sdp">
                <ImageView
                    android:id="@+id/img4"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mbtitestbanner"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/famousPerson4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/homebtn"
        android:layout_width="match_parent"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="@dimen/_10ssp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:layout_margin="@dimen/_8sdp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>