<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bg1"
    android:layout_width="match_parent"
    android:padding="@dimen/_16sdp"
    android:layout_height="match_parent"
    tools:context=".Infj">

    <!-- Header Section -->
    <FrameLayout
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_34sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="INFJ"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_20ssp" />

        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="The Advocate"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp" />

    </FrameLayout>

    <!-- Traits Section -->
    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightgreen"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:paddingVertical="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Traits"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Idealistic: INFJs believe in creating a better world."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Insightful: They understand complex situations."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Creative: INFJs use imagination to solve problems."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Altruistic: They care deeply about helping others."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Relationships Section -->
    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkgreen"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:paddingVertical="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In Relationships"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Empathetic: INFJs offer deep understanding in relationships."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Passionate: They form strong, meaningful connections."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Supportive: INFJs strive to help their loved ones grow."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Challenges and Strengths Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Challenges Section -->
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            android:backgroundTint="@color/darkgreen"
            app:cardCornerRadius="@dimen/_8sdp">

            <LinearLayout
                android:paddingVertical="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_4sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Challenges"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Perfectionism"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Overthinking"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Struggling to open up"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Strengths Section -->
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkgreen"
            app:cardCornerRadius="@dimen/_8sdp">

            <LinearLayout
                android:paddingVertical="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Strengths"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Visionary"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Compassionate"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Organized"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
