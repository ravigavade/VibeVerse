<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bg1"
    android:layout_width="match_parent"
    android:padding="@dimen/_16sdp"
    android:layout_height="match_parent"
    tools:context=".Entj">

    <!-- Header Section -->
    <FrameLayout
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_34sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="ENTJ"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_20ssp" />

        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="The Commander"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp" />

    </FrameLayout>

    <!-- Traits Section -->
    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightgreen"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:paddingVertical="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Traits"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Confident: ENTJs are self-assured and have a strong sense of confidence in their abilities."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Strategic: They excel at planning and thinking long-term, always aiming for the big picture."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Decisive: ENTJs are known for their ability to make quick and effective decisions."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Relationships Section -->
    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkgreen"
        app:cardCornerRadius="@dimen/_8sdp">

        <LinearLayout
            android:paddingVertical="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In Relationships"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Loyal: ENTJs are fiercely loyal and expect the same level of commitment from their partners."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Goal-Oriented: They are focused on achieving their goals and often work with their partners towards shared objectives."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Honest: ENTJs value honesty and direct communication in their relationships."
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_6sdp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Challenges and Strengths Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Challenges Section -->
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkgreen"
            app:cardCornerRadius="@dimen/_8sdp">

            <LinearLayout
                android:paddingVertical="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Challenges"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Impatient"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Can be Overly Critical"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Struggles with Emotional Expression"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Strengths Section -->
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkgreen"
            app:cardCornerRadius="@dimen/_8sdp">

            <LinearLayout
                android:paddingVertical="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Strengths"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Strategic Vision"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Effective Leadership"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Strong Decision-Making Skills"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="@dimen/_6sdp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>
