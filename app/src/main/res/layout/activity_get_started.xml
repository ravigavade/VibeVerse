<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingHorizontal="@dimen/_16sdp"
    tools:context=".GetStarted">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:text="VibeVerse"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_30ssp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_12sdp"
            android:backgroundTint="#7BA9A5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:backgroundTint="@color/white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mbti1"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Understand yourself better and connect with others based on your unique vibe!"
                    android:textColor="@color/white"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_12sdp"
            android:backgroundTint="#7BA9A5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:backgroundTint="@color/white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mbti2"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discover your personality type through a fun and insightful quiz designed to reveal your strengths, preferences, and unique qualities!"
                    android:textColor="@color/white"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />




    <!--    get started button-->
    <androidx.cardview.widget.CardView
        android:id="@+id/getStartedBtn"
        android:layout_width="match_parent"
        android:backgroundTint="@color/black"
        android:layout_marginBottom="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10ssp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET STARTED"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:layout_margin="@dimen/_8sdp"/>

    </androidx.cardview.widget.CardView>






</LinearLayout>


